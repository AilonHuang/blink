<view class="container" hidden="{{hidden}}">
	<image class="classic-img {{playing ? 'rotation' : ''}}" src="{{image}}" />
	<image class="player-img" bind:tap="onPlay" src="{{playing ? pauseSrc : playSrc}}" />
	<image class="tag" src="images/music@tag.png" />
	<text class="content">{{content}}</text>
</view>